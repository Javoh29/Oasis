<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:folding-cell="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/folding_hotel_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        folding-cell:animationDuration="1800">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_hotel_def_img"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_hotel_defoult"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_below="@+id/card_hotel_def_img"
                        android:id="@+id/like_btn_hotels"
                        app:btn_color="@android:color/darker_gray"
                        app:btn_fill_color="@color/colorMenuText"
                        app:allow_random_color="false"
                        app:enable_flashing="false"
                        app:big_shine_color="@color/colorMenuText"
                        app:click_animation_duration="200"
                        app:shine_animation_duration="1500"
                        app:shine_turn_angle="10"
                        app:small_shine_offset_angle="20"
                        app:shine_distance_multiple="1.5"
                        app:small_shine_color="#B91010"
                        app:shine_count="8"
                        app:siShape="@raw/heart"
                        folding-cell:ignore="NotSibling"/>

                    <TextView
                        android:id="@+id/tv_like_qty_hotels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:layout_below="@id/card_hotel_def_img"
                        android:layout_marginTop="6dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorMenuText"
                        android:layout_toEndOf="@id/like_btn_hotels"/>

                    <TextView
                        android:id="@+id/tv_hotel_name_cell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/card_hotel_def_img"
                        android:textSize="20sp"
                        android:fontFamily="@font/work_sans_medium"
                        android:textColor="@color/colorMenuText"
                        android:layout_marginTop="2dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@drawable/ab_line"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/like_btn_hotels"/>

                    <TextView
                        android:id="@+id/tv_hotels_contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/like_btn_hotels"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorMenuText"
                        android:textSize="18sp"
                        android:fontFamily="@font/work_sans_medium"
                        android:text="@string/text_contacts"/>

                    <TextView
                        android:id="@+id/tv_hotels_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_hotels_contacts"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorMenuText"
                        android:fontFamily="@font/work_sans_medium"/>

                    <TextView
                        android:id="@+id/btn_hotel_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_hotels_contacts"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/work_sans_medium"
                        android:text="@string/btn_text_call"
                        android:background="@drawable/btn_cell_open"/>

                    <TextView
                        android:id="@+id/tv_hotels_work_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_hotels_tel"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorMenuText"
                        android:fontFamily="@font/work_sans_medium"/>

                    <TextView
                        android:id="@+id/tv_time_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/tv_hotels_work_hours"
                        android:textColor="@color/colorMenuText"
                        android:fontFamily="@font/work_sans_medium"/>

                    <TextView
                        android:id="@+id/tv_time_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/tv_time_out"
                        android:textColor="@color/colorMenuText"
                        android:fontFamily="@font/work_sans_medium"/>

                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/text_website"
                        android:layout_below="@id/tv_time_in"
                        android:textColor="@color/colorMenuText"
                        android:fontFamily="@font/work_sans_medium"/>

                    <TextView
                        android:id="@+id/tv_website_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_time_in"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="3dp"
                        android:selectAllOnFocus="false"
                        android:linksClickable="false"
                        android:autoLink="all"
                        android:gravity="left"
                        android:singleLine="true"
                        android:layout_toEndOf="@+id/tv_website"
                        android:layout_toStartOf="@+id/btn_hotel_open"
                        android:fontFamily="@font/work_sans_medium"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/btn_hotel_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_time_in"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/work_sans_medium"
                        android:textSize="12sp"
                        android:text="@string/btn_text_open"
                        android:background="@drawable/btn_cell_open"/>

                    <TextView
                        android:id="@+id/tv_fast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_below="@id/tv_website_link"
                        android:textColor="@color/colorMenuText"
                        android:fontFamily="@font/work_sans_medium"/>

                    <View
                        android:id="@+id/view_line_down"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@drawable/ab_line"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tv_fast"/>

                    <com.skydoves.elasticviews.ElasticButton
                        android:id="@+id/btn_open_in_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_down"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_cell_hotels"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="@color/colorPanel"
                        android:fontFamily="@font/work_sans_semibold"
                        android:text="@string/btn_text_open_map"
                        android:textAlignment="center"
                        app:button_duration="250"
                        app:button_scale="0.87"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_menu_fon_hotel">

                    <ImageView
                        android:id="@+id/img_hotels"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/ic_hotels"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/img_hotels"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/tv_hotel_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/work_sans_medium"/>

                        <TextView
                            android:id="@+id/tv_hotel_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/work_sans"/>

                        <TextView
                            android:id="@+id/tv_distance_hotel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/work_sans"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </com.ramotion.foldingcell.FoldingCell>

</FrameLayout>