<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <TextView
        android:id="@+id/tv_list_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        android:textColor="@color/colorMenuText"
        android:fontFamily="@font/work_sans_medium"
        android:layout_marginStart="25dp"/>

    <ImageView
        android:id="@+id/img_smal_icons"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_list_temp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/tv_list_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="22sp"
        android:textColor="@color/colorMenuText"
        android:fontFamily="@font/work_sans_medium"
        android:layout_marginEnd="25dp"/>

    <TextView
        android:id="@+id/tv_list_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_list_hour"
        android:layout_toStartOf="@+id/img_smal_icons"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorMenuText"
        android:fontFamily="@font/work_sans_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/ab_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
