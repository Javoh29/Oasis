<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/home_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/item_panorama"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_panorama_img_on"
                    app:imageView_scale="0.7"
                    app:imageView_duration="300"/>

                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/item_mood"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/item_panorama"
                    android:layout_marginEnd="15dp"
                    android:src="?ic_menu_mood"
                    app:imageView_scale="0.7"
                    app:imageView_duration="300"/>

                <com.skydoves.elasticviews.ElasticImageView
                    android:id="@+id/item_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_bg_menu"
                    app:imageView_scale="0.7"
                    app:imageView_duration="300"/>

                <TextView
                    android:id="@+id/tv_app_bar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/item_menu"
                    android:fontFamily="@font/righteous"
                    android:text="@string/app_name"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="10dp"
                    android:textSize="28sp" />
            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

</merge>