<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_err_connect"
    android:visibility="gone">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_error_connection"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/tv_err_connect"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tv_err_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/colorConnectTwo"
        android:fontFamily="@font/raleway_semibold"
        android:layout_centerInParent="true"
        android:text="@string/no_con_text"/>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_retry"
        android:text="@string/btn_text_retry"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_err_connect"
        android:layout_marginTop="30dp"/>

</RelativeLayout>